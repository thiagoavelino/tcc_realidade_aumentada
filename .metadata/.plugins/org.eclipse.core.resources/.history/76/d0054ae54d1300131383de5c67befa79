package Test;

import static org.junit.Assert.*;

import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;

import Model.ImgAlgorithms;

import com.github.sarxos.webcam.Webcam;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

import org.opencv.core.Core;

public class UnitTestsImgAlgorithms {
	
	private Model.ImgAlgorithms imgAlgorithms;

	@Before
	public void setUp() throws Exception {
		BufferedImage img = null;
		try {
		    img = ImageIO.read(new File("test_label_1_area.png"));
		} catch (IOException e) {
		}
		
		this.imgAlgorithms = new Model.ImgAlgorithms(img);
		this.imgAlgorithms.toBinary();
		this.imgAlgorithms.setImage(imgAlgorithms.getOutput());
	}

	@Test
	public void labelingImageTestWith1Area2x2Image() {
		this.imgAlgorithms.labeling();
		Assert.assertSame(imgAlgorithms.getLabeledAreas().size(), 1);
	}
	
	@Test
	public void labelingImageTestWith2Area15x12Image() {
		this.imgAlgorithms.labeling();
		Assert.assertSame(imgAlgorithms.getLabeledAreas().size(), 1);
	}

}
