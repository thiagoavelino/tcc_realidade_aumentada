package Model;


import java.awt.image.BufferedImage;

import com.github.sarxos.webcam.Webcam;
import com.github.sarxos.webcam.WebcamPanel;


public class CamMonitor implements Runnable{
	
	private View.MainWindow mainView;
	private int counter;
	
	public CamMonitor(View.MainWindow mainView){
		this.mainView = mainView;
		counter = 0;
	}

	@Override
	public void run() {
		View.MainWindow mainView = new View.MainWindow();
		WebcamPanel panelCam = mainView.getPanelCam();
		Webcam.setAutoOpenMode(true);
		BufferedImage image = Webcam.getDefault().getImage();
	}

}
