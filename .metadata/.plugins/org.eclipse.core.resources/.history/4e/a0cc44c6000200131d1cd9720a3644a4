package View;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Rectangle;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JPanel;

public class CamRAPanel extends JPanel {
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private BufferedImage master;
	
	public CamRAPanel() {
        try {
            master = ImageIO.read(new File("test0.png"));
            Graphics2D g2d = master.createGraphics();
            g2d.drawImage(master, 0, 0, this);
            g2d.dispose();
            setBounds(new Rectangle(700, 5, 640, 480));

        } catch (IOException ex) {
            ex.printStackTrace();
        }
    }

    @Override
    public Dimension getPreferredSize() {
        Dimension size = new Dimension(master.getWidth(), master.getHeight());
        return size;
    }

    @Override
    protected void paintComponent(Graphics g) {
    	super.paintComponent(g);
    	g.drawImage(master, 0, 0, this);
    }

}
