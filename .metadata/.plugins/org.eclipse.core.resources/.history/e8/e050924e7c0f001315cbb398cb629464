package Model;

import java.awt.Color;
import java.awt.image.BufferedImage;
import java.util.ArrayList;

public class Img {
	
	private BufferedImage image;
	private ArrayList<Pixel> arrayPixels;
	
	public Img(BufferedImage image){
		this.image = image;
		arrayPixels = new ArrayList<Pixel>();
		for (int y = 0; y < image.getHeight(); y++)
			for (int x = 0; x < image.getWidth(); x++) {
				Color pixel = new Color(image.getRGB(x, y));
				int color = (int) (0.299*pixel.getRed() + 0.587*pixel.getGreen() + 0.114*pixel.getBlue() ;
				arrayPixels.add(new Pixel(x, y, color));
				
				output.setRGB(x, y, pixel.getRed() < getThreshold() ? BLACK : WHITE);
			}
	}

}
